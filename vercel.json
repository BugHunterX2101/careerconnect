{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/index.js"
        },
        {
            "src": "^/?$",
            "dest": "/public/index.html"
        },
        {
            "src": "^/dashboard/?$",
            "dest": "/public/dashboard.html"
        },
        {
            "src": "^/profile/?$",
            "dest": "/public/profile.html"
        },
        {
            "src": "^/jobs/?$",
            "dest": "/public/jobs.html"
        },
        {
            "src": "^/applications/?$",
            "dest": "/public/applications.html"
        },
        {
            "src": "^/messages/?$",
            "dest": "/public/messages.html"
        },
        {
            "src": "^/settings/?$",
            "dest": "/public/settings.html"
        },
        {
            "src": "/css/(.*)",
            "dest": "/public/css/$1"
        },
        {
            "src": "/js/(.*)",
            "dest": "/public/js/$1"
        },
        {
            "src": "/images/(.*)",
            "dest": "/public/images/$1"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ],
    "cleanUrls": true,
    "trailingSlash": false,
    "env": {
        "NODE_ENV": "production",
        "MONGODB_URI": "@mongodb_uri",
        "JWT_SECRET": "@jwt_secret"
    }
} 