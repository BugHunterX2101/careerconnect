{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "headers": {
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Headers": "Content-Type, Authorization, Accept",
                "Access-Control-Allow-Methods": "GET, POST, OPTIONS"
            },
            "continue": true
        },
        {
            "src": "/api/health",
            "dest": "/api/health"
        },
        {
            "src": "/api/auth/(.*)",
            "dest": "/api/auth/$1"
        },
        {
            "src": "/signup",
            "dest": "/signup.html"
        },
        {
            "src": "/dashboard",
            "dest": "/dashboard.html"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ],
    "env": {
        "NODE_ENV": "production",
        "MONGODB_URI": "@mongodb_uri",
        "JWT_SECRET": "@jwt_secret"
    }
} 