{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "index.js"
        },
        {
            "src": "/signup.html",
            "dest": "public/signup.html"
        },
        {
            "src": "/dashboard.html",
            "dest": "public/dashboard.html"
        },
        {
            "src": "/script.js",
            "dest": "public/script.js"
        },
        {
            "src": "/styles.css",
            "dest": "public/styles.css"
        },
        {
            "src": "^/$",
            "dest": "public/index.html"
        },
        {
            "src": "/(.*)",
            "dest": "public/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production",
        "MONGODB_URI": "@mongodb_uri",
        "JWT_SECRET": "@jwt_secret"
    }
} 