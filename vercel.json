{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/auth/(.*)",
            "dest": "index.js"
        },
        {
            "src": "/",
            "dest": "public/index.html"
        },
        {
            "src": "/signup",
            "dest": "public/signup.html"
        },
        {
            "src": "/dashboard",
            "dest": "public/dashboard.html"
        },
        {
            "src": "/(.+\\.js)",
            "dest": "public/$1"
        },
        {
            "src": "/(.+\\.css)",
            "dest": "public/$1"
        },
        {
            "src": "/(.+\\.html)",
            "dest": "public/$1"
        },
        {
            "src": "/(.*)",
            "dest": "public/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production",
        "MONGODB_URI": "@mongodb_uri",
        "JWT_SECRET": "@jwt_secret"
    }
} 