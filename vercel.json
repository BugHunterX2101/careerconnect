{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "index.js"
        },
        {
            "src": "/signup",
            "dest": "/signup.html"
        },
        {
            "src": "/dashboard",
            "dest": "/dashboard.html"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ],
    "env": {
        "NODE_ENV": "production",
        "MONGODB_URI": "@mongodb_uri",
        "JWT_SECRET": "@jwt_secret"
    }
} 